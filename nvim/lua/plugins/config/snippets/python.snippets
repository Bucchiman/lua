	#
	# ref: https://qiita.com/keishi04hrikzira/items/dd6ef7fcd67092c9baba
	#
	from functools import wraps
	def deco(f):
		@wraps(f, "__name__")
		def wrapper(*args, **kwargs):
			"""test"""
			return f(*args, **kwargs)
		return wrapper
	@deco
	def hoge():
		""" sample """
		pass

	print(hoge.__name__)
	# 出力: hoge
	# __name__はwrapsで指定しているのでそのまま

	print(hoge.__doc__)
	# 出力: test
	# __doc__はwrapsで指定しないので上書きされる

