snippet _8timer_decorator
	#
	# Reference: gulliver, gutils.zip, gutils_time.py
	# decorator
	def timer(func):
	    def wrapper(*args, **kwargs):
	        before = time()
	        rv = func(*args, **kwargs)
	        after = time()
	        print(f"[{func.__name__}] elapsed {after-before:.6f}")
	        return rv
	    return wrapper


	@timer
	def add(x, y):
	    return x + y


